@model string

@{
    ViewData["Title"] = "Статус аутентификации";
    Layout = "_Layout";
}

<main id="content">
    <div class="container">
        <div class="space-bottom-1 space-top-xl-2 space-bottom-xl-4">
            <div class="d-flex flex-column align-items-center pt-lg-7 pb-lg-4 pb-lg-6">
                <h1 class="font-weight-medium font-size-46 text-lh-sm mt-xl-1">@(Model ?? "Вы потерялись?")</h1>
                <h6 class="font-size-4 font-weight-medium mb-2">Нажмите, чтобы войти в аккаунт</h6>
                <div class="d-flex align-items-center flex-column">
                    <a asp-action="Login" class="btn btn-gradient-2 rounded-hg text-white btn-wide width-250 font-weight-bold">Войти</a>
                </div>
            </div>
        </div>
    </div>
</main>