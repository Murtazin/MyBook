              <span>Премиум</span>
             }
            </div>

            <p class="font-size-2 mb-2 crop-text-2">@book.Description</p>
           </div>

           <div class="col-md-auto d-flex align-items-center">
            <button type="submit" id="btnSubmit" onclick="AddDeleteFavorites('@Url.Action("AddToFavorites", "Profile")/@book.Id')" class="h-p-bg btn btn-outline-primary border-0" data-toggle="modal" data-target=".bd-example-modal-lg">
             <i class="flaticon-heart"></i>
            </button>
           </div>
          </div>
         </div>
        </li>
       }
      </ul>
     </div>
    </div>

    <nav aria-label="Page navigation example">
     <div class="mt-5 d-flex justify-content-md-center">
      <button type="submit" class="btn rounded-hg border-width-2 font-weight-bold btn-outline-yellow-darker">Показать еще</button>
     </div>
    </nav>
   </div>
  </div>
 </div>
</div>
</body>