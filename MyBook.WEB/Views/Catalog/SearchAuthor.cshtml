@model IEnumerable<MyBook.DAL.Entities.Author>

@{
    ViewBag.Title = "Поиск автора";
    Layout = "_Layout";
}

<body class="right-sidebar">
<div class="page-header border-bottom">
 <div class="container">
  <div class="d-md-flex justify-content-between align-items-center py-4">
   <nav class="font-size-2 header-text-color">
    <a asp-controller="Home" asp-action="Index" class="header-text-color">MyBook — Электронная библиотека</a>
    <span class="breadcrumb-separator mx-1"><i class="fas fa-angle-right"></i></span>
    <span class="header-text-color">Каталог</span>
    <span class="breadcrumb-separator mx-1"><i class="fas fa-angle-right"></i></span>@ViewBag.Title
   </nav>
  </div>
 </div>
</div>

<div class="site-content space-bottom-3" id="content">
 <div class="container">
  <div class="pt-4 space-bottom-1">
   <h1 class="font-weight-bold">Вот что мы нашли по вашему запросу</h1>
  </div>
  
  <div class="row">
   <div id="primary" class="content-area">
    <div class="tab-content" id="pills-tabContent">
     <div class="tab-pane fade active show" id="pills-two-example1" role="tabpanel" aria-labelledby="pills-two-example1-tab">

      <ul class="products list-unstyled mb-6">
       @foreach (var author in Model)
       {
        <li class="product product__list bg-white rounded-hg mb-4">
         <div class="overflow-hidden p-3">
          <div class="row position-relative">
           <div class="col-md-auto mb-3 mb-md-0">
            <a asp-controller="Catalog" asp-action="AuthorDetails" asp-route-id="@author.Id" class="d-block"><img src="@author.Image" width="112" class="img-fluid d-block mx-auto rounded-hg border" alt="image-description"></a>
           </div>
           <div class="col-md product__body bg-white mb-3 mb-md-0">
            <h2 class="product__keyword h6 text-lh-md mb-1 crop-text-2 h-dark font-weight-bold"><a asp-controller="Catalog" asp-action="AuthorDetails" asp-route-id="@author.Id" tabindex="0">@author.FullName</a></h2>

            <div class="font-size-1 mb-2">
             <p class="font-size-2 mb-2 crop-text-2">@author.Description</p>
            </div>
           </div>
          </div>
         </div>
        </li>
       }
      </ul>
     </div>
    </div>

    <nav aria-label="Page navigation example">
     <div class="mt-5 d-flex justify-content-md-center">
      <button type="submit" class="btn rounded-hg border-width-2 font-weight-bold btn-outline-yellow-darker">Показать еще</button>
     </div>
    </nav>
   </div>
  </div>
 </div>
</div>
</body>