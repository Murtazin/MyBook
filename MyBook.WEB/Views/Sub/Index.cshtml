                                </div>
                            </div>
                        </div>

                        <ul class="list-unstyled mb-lg-13 pb-1">
                            @foreach (var description in sub.Description.Split("\n"))
                            {
                                <li class=" mb-2 pb-1">@description</li>
                            }
                        </ul>
                        <div class="d-flex justify-content-center">
                            <button onclick='window.location = "@Url.Action("Payment", "Sub", new { subId = sub.Id })";'
                                type="submit" class="btn btn-block btn-gradient font-weight-bold rounded-hg transition-3d-hover height-55">Оформить подписку</button>
                        </div>
